<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/budget_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/budget_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_budget_on"
        android:adjustViewBounds="true"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/category_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="15dp"
        android:text="test1"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_category_border"
        android:fontFamily="@font/nanum_square_regular"
        app:layout_constraintLeft_toRightOf="@id/budget_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="content"
        android:textSize="15sp"
        android:textColor="@color/navy"
        android:maxLines="1"
        android:fontFamily="@font/nanum_square_extrabold"
        app:layout_constraintTop_toBottomOf="@id/category_1"
        app:layout_constraintLeft_toRightOf="@id/budget_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>