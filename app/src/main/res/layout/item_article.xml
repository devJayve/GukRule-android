<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/article_item"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:id="@+id/article_image"
            android:layout_marginRight="10dp"
            android:src="@drawable/keyword_image"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/article_item"
            app:layout_constraintLeft_toLeftOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="10sp"
                android:drawablePadding="2.5dp"
                android:drawableLeft="@drawable/keyword_budget"
                android:id="@+id/article_keyword"
                android:textColor="@color/white"
                android:background="@drawable/round_button"
                android:text="(Keyword)"
                />

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:id="@+id/article_title"
                android:textStyle="bold"
                android:lineSpacingExtra="-3dp"
                android:layout_height="34dp"
                android:text="article title"/>

            <TextView
                android:layout_width="match_parent"
                android:paddingTop="3dp"
                android:textSize="10sp"
                android:id="@+id/article_content"
                android:lineSpacingExtra="-2dp"
                android:textStyle="bold"
                android:layout_height="54dp"
                android:text="article content"/>

            <TextView
                android:id="@+id/article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="8sp"
                android:text="0000-00-00 00:00:00"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>